include ../includes/mixins.jade

mixin simpleList(itemName, linkName)
	li
		span= itemName
		+space
		a(href="#")= linkName

nav.desktopMenu.fancySiteMenu.js-fancySiteMenu
	div.fancySiteMenu__shadow.js-fancySiteMenu__shadow
		span.marker

	ul.fancySiteMenuItems.js-fancySiteMenuItems
		li.js-fancySiteMenuItems__item
			a(href="#") Books
			div.fancySiteMenu__plate
				div.fancySiteMenu__item--imageGallery
					img(src="./images/sense-and-sensibility.jpg")
					p The story revolves around the Dashwood sisters, Elinor and Marianne. Whereas the former is a sensible, rational creature, her younger sister is wildly romantic--a characteristic that offers Austen plenty of scope for both satire and compassion.

		li.js-fancySiteMenuItems__item
			a(href="#") Authors
			ul.fancySiteMenu__plate.fancySiteMenu__item--simpleList
				+simpleList("Baby's Books", "Baby-2 Years Old")
				+simpleList("Baby's Books", "Ages 3-5 Years Old")
				+simpleList("Baby's Books", "Ages 6-8 Years Old")
				+simpleList("Baby's Books", "Ages 9-12 Years Old")
				+simpleList("Baby's Books", "Award Winning Books")
				+simpleList("Baby's Books", "Best Books of the Month")
				+simpleList("Baby's Books", "Best Sellers")

		li.js-fancySiteMenuItems__item
			a(href="#") Book Clubs
			ul.fancySiteMenu__plate.fancySiteMenu__item--buttonList
				li
					a.buttonItem(href="#") Afterthoughts Book Club
				li
					a.buttonItem(href="#") Breakfast Book Club
				li
					a.buttonItem(href="#") Coffee, Books & More
				li
					a.buttonItem(href="#") The Reading Caf√©
			li.js-fancySiteMenuItems__item
					a(href="#") Children Books
			li.js-fancySiteMenuItems__item
				a.menuFlat__Title(href="#") Log In
			li.js-fancySiteMenuItems__item
				a.menuFlat__Title(href="#") Join
