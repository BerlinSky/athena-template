extends jade/includes/base

mixin menuItems(...items)
	each item in items
		li.menuItem
			a(href='#')
				span= item

block pageTitle
	title Reading Life

block bodyContent
	div.l-pageContainer.pageContainer
		.l-pageHeader.pageHeader
			.l-navContainer.navContainer
				.l-logoContainer.logoContainer
					div
						svg(version="1.1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 512 512")
							path(fill="#009cde" d="M399.798 8.104c-45.263 0-74.31-8.104-120.924-8.104-150.642 0-220.896 85.792-220.896 172.936 0 51.339 24.32 68.229 72.282 68.229-3.379-7.432-9.457-15.54-9.457-52.017 0-102.005 38.503-131.729 87.818-133.755 0 0-40.459 396.687-157.889 444.271v12.336h158.297l54.013-256h98.922l22.036-64h-107.454l25.972-123.095c29.723 6.078 58.771 12.158 83.766 12.158 31.074 0 59.447-9.457 74.984-81.063-18.913 6.080-39.181 8.104-61.47 8.104z")

				.l-toggleMenuContainer.toggleMenuContainer
					a(href='#').js-toggleMobileMenu
						i.fa.fa-bars.fa-2x

			.l-menuWrapper.menuWrapper.js-menuWrapper
				include ./jade/components/nav-menu

				div.l-searchContainer.searchContainer.js-showSearchPanel
					a.searchButton.searchButton--default
						i.fa.fa-search
				div.l-searchWrapper.searchWrapper.js-searchPanel
					form(action="#" method='post').l-searchWrapper__form
						a.searchButton.searchButton--whiteSquare
							i.fa.fa-search
						input(type="text" name="s" placeholder="Enter your search").searchInput
						a.closeButton.closeButton--dimmedSquare.js-hideSearchPanel
							i.fa.fa-close

		.l-pageContentWrapper.pageContentWrapper
			div.l-contentContainer.contentContainer.contentContainer--newsContent
				div.newHeaderPanel
					h2 News
					div.imageFrame
						img(alt='img' src='./images/header-border.png').imageResponsive
				div.tourNewsPanel
					div.tourNewsBox
						h3 Tour Dates
						h4 Upcoming Tour Dates
						div.imageFrame
							img(alt='img' src='./images/header-border.png').imageResponsive
						div.tourDateAndVenue
							div.tourDate
								div.tourMonth Apr
								div.tourDay 06
							div.tourLocation
								div.tourLocation__city St. Louis, MO
								div.tourLocation__name The Pageant
						a.siteButton.siteButton--default(href="/tour") More &gt;&gt;

				div.otherNewsPanel
					h3 Other News
					div.imageFrame
						img(alt='img' src='./images/header-border.png').imageResponsive
					div.newsList
						div.newsListItem
							a(href="/news?title=chanterelle") Chanterelle
						div.newsListItem
							a(href="/news?title=chanterelle") Chanterelle
						div.newsListItem
							a(href="/news?title=chanterelle") Chanterelle
						div.newsListItem
							a(href="/news?title=chanterelle") Chanterelle


		.l-pageFooter.contentFooterContainer
			div.footerPanel.footerPanel--links
				div.footerPanel__item.footerPanel__item--default
					ul
						li
							a(href="/help" target="") Help
						li
							a(href="/help" target="") Newsletter
						li
							a(href="/help" target="") Terms of Use
						li
							a(href="/help" target="") Privacy Policy
