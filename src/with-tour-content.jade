									span Event Details &nbsp;
									i.fa.fa-chevron-circle-right

						div.tourDate
							div.tourWeekDay Thu
							div.tourMonth Apr
							div.tourDay 06
						div.tourLocation
							div.tourLocation__city Compton Terrace
							div.tourLocation__name Indianapolis, IN, US
						div.eventDetail
							a.tourButton.tourButton--default(href="/tour") Event Details &gt;&gt;

						div.tourDate
							div.tourWeekDay Thu
							div.tourMonth Apr
							div.tourDay 06
						div.tourLocation
							div.tourLocation__city Le Dome
							div.tourLocation__name Marseilles, FR
						div.eventDetail
							a.tourButton.tourButton--default(href="/tour") Event Details &gt;&gt;

			div.l-contentFooterContainer.contentFooterContainer
				div.footerPanel.footerPanel--links
