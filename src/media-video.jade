extends jade/includes/base

mixin menuItems(...items)
	each item in items
		li.menuItem
			a(href='#')
				span= item

mixin photoFrame(frameTitle)
	.imagePanel__frame
		a.frammeLink(href="/")
			.frammeTitle=frameTitle

block pageTitle
	title Reading Life

